<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:id="@+id/profile_layout"
    tools:ignore="Overdraw">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.matty_christopher.quizapp.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Profile"
                        android:textSize="35sp"
                        android:textColor="#00BFFF"
                        android:id="@+id/textView3"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highscore:"
                        android:textSize="20sp"
                        android:textColor="#f00f0a"
                        android:id="@+id/hscore_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct answer %:"
                        android:textSize="20sp"
                        android:textColor="#f00f0a"
                        android:id="@+id/percent_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Current email:"
                        android:textSize="18sp"
                        android:textColor="#080101"
                        android:id="@+id/textView5"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:textColor="#00BFFF"
                        android:id="@+id/editText_email"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current password:"
                        android:textSize="18sp"
                        android:textColor="#080101"
                        android:id="@+id/textView6"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:textColor="#00BFFF"
                        android:id="@+id/editText_pwd"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="show"
                        android:id="@+id/checkBox"
                        android:textSize="20sp"
                        android:textColor="#080101"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:layout_marginBottom="10dp" />

                    <Button
                        android:layout_width="235dp"
                        android:layout_height="50dp"
                        android:text="save"
                        android:textSize="20sp"
                        android:id="@+id/button"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.matty_christopher.quizapp.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Achievements"
                        android:textSize="35sp"
                        android:textColor="#00BFFF"
                        android:id="@+id/textView4"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/achievement_template_grey"
                        android:contentDescription="@string/description"
                        android:id="@+id/achievement1"
                        android:layout_marginTop="68dp"
                        android:layout_below="@+id/textView4"
                        android:layout_alignLeft="@+id/textView4"
                        android:layout_alignStart="@+id/textView4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/achievement_template_2_grey"
                        android:contentDescription="@string/description"
                        android:id="@+id/achievement2"
                        android:layout_below="@+id/achievement1"
                        android:layout_alignLeft="@+id/achievement1"
                        android:layout_alignStart="@+id/achievement1"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hscore_achievement_1"
                        android:src="@drawable/highscore_temp_grey"
                        android:contentDescription="@string/description"
                        android:layout_below="@+id/achievement2"
                        android:layout_alignLeft="@+id/achievement2"
                        android:layout_alignStart="@+id/achievement2"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hscore_achievement_2"
                        android:src="@drawable/highscore_temp_2_grey"
                        android:contentDescription="@string/description"
                        android:layout_below="@+id/hscore_achievement_1"
                        android:layout_alignLeft="@+id/hscore_achievement_1"
                        android:layout_alignStart="@+id/hscore_achievement_1"
                        android:layout_marginTop="10dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress"
                        android:layout_above="@+id/achievement2"
                        android:layout_alignRight="@+id/textView4"
                        android:layout_alignEnd="@+id/textView4" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar2"
                        android:progressDrawable="@drawable/progress"
                        android:layout_above="@+id/hscore_achievement_1"
                        android:layout_alignLeft="@+id/progressBar"
                        android:layout_alignStart="@+id/progressBar" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar3"
                        android:progressDrawable="@drawable/progress"
                        android:layout_alignBottom="@+id/hscore_achievement_1"
                        android:layout_alignLeft="@+id/progressBar2"
                        android:layout_alignStart="@+id/progressBar2" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar4"
                        android:progressDrawable="@drawable/progress"
                        android:layout_alignBottom="@+id/hscore_achievement_2"
                        android:layout_alignLeft="@+id/progressBar3"
                        android:layout_alignStart="@+id/progressBar3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="correct answers 0/250"
                        android:textColor="#00BFFF"
                        android:id="@+id/textView_correct"
                        android:layout_above="@+id/progressBar"
                        android:layout_alignRight="@+id/progressBar"
                        android:layout_alignEnd="@+id/progressBar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="total answered 0/500"
                        android:textColor="#00BFFF"
                        android:id="@+id/textView_answered"
                        android:layout_above="@+id/progressBar2"
                        android:layout_alignRight="@+id/textView4"
                        android:layout_alignEnd="@+id/textView4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="high score 0/50"
                        android:textColor="#00BFFF"
                        android:id="@+id/textView_hscore_1"
                        android:layout_above="@+id/progressBar3"
                        android:layout_alignRight="@+id/progressBar3"
                        android:layout_alignEnd="@+id/progressBar3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="high score 0/100"
                        android:textColor="#00BFFF"
                        android:id="@+id/textView_hscore_2"
                        android:layout_above="@+id/progressBar4"
                        android:layout_alignRight="@+id/progressBar4"
                        android:layout_alignEnd="@+id/progressBar4" />

                </RelativeLayout>


            </FrameLayout>

        </LinearLayout>
    </TabHost>
</RelativeLayout>
